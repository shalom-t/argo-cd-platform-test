    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "my_service.main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/my-service",
            "python": "${workspaceFolder}/my-service/.venv/bin/python",
            "jinja": true,
            "justMyCode": false
        }
    ]
}